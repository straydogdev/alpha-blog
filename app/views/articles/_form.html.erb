<% if @article.errors.any? %>
  <div class="row">
  	<div class="col-xs-8 col-xs-offset-2">
  	  <div class="panel panel-danger">
  	  	<div class="panel-heading">
  	  	  <h2 class="panel-title">
  	  	  <%= pluralize(@article.errors.count, "error") %>
  	  	  prohibited this artcle from being saved:
  	  	  </h2>
  	  	  <div class="panel-body">
  	  	  	<ul>
  	  	  	  <% @article.errors.full_messages.each do |msg| %>
  	  	  	  <li><%= msg %>
  	  	  	  <% end %>
  	  	  	</ul>
  	  	  </div>
  	  	</div>
  	  </div>
  	</div>
<% end %>

<div class='row'> 
	<div class='col-xs-12'>
	  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
		<div class="form-group">
		  <div class="control-label col-sm-2">
			<%= a.label :title %> 
		  </div>
		  <div class="col-sm-8">
			<%= a.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
		  </div> 
		</div>

		<div class="form-group">
		 <div class="control-label col-sm-2">
			<%= a.label :description %> 
		 </div>
			<div class="col-sm-8">
				<%= a.text_area :description, class: "form-control", placeholder: "Body of article" %> 
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= a.submit class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
	</div>
</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4" >
	[ <%= link_to 'Cancel request & Back to article page', articles_path %> ]
</div>

