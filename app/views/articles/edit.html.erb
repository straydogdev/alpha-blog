<h1> Update Existing Article </h1>

<% if @article.errors.any? %>
<h2> The following errors prevented the article from getting created </h2>

<ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li> <%= msg %> </li>
	<% end %>
</ul>
<% end %>

<%= form_for @article do |a| %>

<p>
	<%= a.label :title %> <br/>
	<%= a.text_field :title %>
</p> 

<p>
	<%= a.label :description %> <br/>
	<%= a.text_area :description %> 
</p>

<p>
	<%= a.submit %>
</p>
<% end %>

<%= link_to 'Back', articles_path %>